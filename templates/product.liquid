<div class="l-main__page--product">
  {% section 'product' %}

  <div class="l-page-after--product">
    <div class="l-page-after__product-list">
      {% include 'ac-related-product-by-tag' %}
    </div>
  </div>
  <!--Start Stamped.io Auto Installation-->
  <div id="stamped-main-widget" class="stamped-main-widget" data-widget-style="standard" data-product-id="{{ product.id }}" data-name="{{ product.title | escape }}" data-url="{{ shop.url }}{{ product.url }}" data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}" data-description="{{ product.description | escape }}" data-product-sku="{{product.handle}}" data-product-type="{{product.type}}" data-widget-language="{{shop.locale}}">
    Some test
    {{ product.metafields.stamped.reviews }}
  </div><!--End Stamped.io Auto Installation-->

</div>

{% include 'ac-product-json' %}

