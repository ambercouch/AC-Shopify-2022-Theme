{% paginate blog.articles by 24 %}

<div class="l-main__page--blog">
  <div class="l-page--blog">

    <header class="l-page__header--blog" role="banner">
      <h1 class="l-page__heading--blog" >
        <span class="l-page__title">{{ blog_title }}</span>
      </h1>
    </header>

  {% comment %}

  Article Previews
  ====================
  {% endcomment %}
    <div class="l-page__thumb-list">
      <div class="l-thumb-list--blog">
        <ul class="l-thumb-list__list--blog" data-isotope="blog">
          {% for item in blog.articles %}
            <li class="l-thumb-list__item--blog">
              <div class="l-thumb-list__thumb">
                {% include 'ac-item-thumb-article' with modClass : '--blog' %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>

  {% if paginate.pages > 1 %}
    <div class="l-page__footer">
      <div class="l-page__pagination">
        {% include 'pagination' %}
      </div>

    </div>
  {% endif %}
  </div>
  <div class="l-page-after--blog">
    {% assign collection = collections['blog'] %}
    <div class="l-page-after__content--prodlct-list">
      {{ collection.description }}
    </div>
    <div class="l-page-after__product-list">
      <div class="l-product-list">
        <div class="l-product-list__list">
          {% for product in collection.products limit:4 %}

            <div class="l-product-list__item is-product-id-{{ product.id }} u-bgc-{{ product.metafields.global.background }}">
              <div class="l-product-list__item-thumb">
                {% include 'acstk-item-thumb' %}
              </div>
            </div>


          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>


{% endpaginate %}
