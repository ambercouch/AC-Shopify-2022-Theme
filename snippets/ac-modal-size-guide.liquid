<!-- ac-modal-size-guide.liquid -->
<div class="c-product-form__link--size-guide">
  <div class="c-btn--size-guide">
    <a class="c-btn__link--size-guide" data-ajax-id="/pages/size-guide-{{ sizeGuideId }}" data-remodal-ajax="{{  product.handle }}" data-remodal-target="modalSizeGuide" href="/pages/size-guide-{{ sizeGuideId }}" data-remodal>
      <span class="c-btn__label--size-guide">Size & Fit Guide</span>
      <span class="c-btn__icon">
              {% include 'svg-icon' with {icon : 'icon-arrow-up'} %}
            </span>
    </a>
  </div>
  <div id="modalSizeGuide" class="remodal" data-remodal-id="modalSizeGuide" data-remodal-options="hashTracking: false," >
    <button data-remodal-action="close" class="remodal-close"></button>
    <div class="remodal-ajax-content" data-ajax-content>
      <div class="c-size-guide__loading">
        Size Guide Loading...
      </div>
    </div>
  </div>
</div>
