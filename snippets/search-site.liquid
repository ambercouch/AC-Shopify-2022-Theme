<div class="search-site" >
  <form  class="search-site__form" action="/search" method="get" role="search">
    <label class="search-site__label" for="Search" class="label-hidden">
      {{ 'general.search.placeholder' | t }}
    </label>

    <div class="search-site__input-wrap">
      <input type="search"
            name="q"
            id="Search"
            value="{{ search.terms | escape }}"
            placeholder="{{ 'general.search.placeholder' | t }}"
            class="search-site__input">

      <div id="search-site-results"></div>
    </div>

    <button type="submit" class="btn search-site__control--search">
      {% include 'icon-search' %}
      <span class="icon-fallback-text search-site__text">{{ 'general.search.submit' | t }}</span>
    </button>
    <button id="searchControlClose"  class="btn search-site__control--close">
      {% include 'icon-close' %}
      <span class="icon-fallback-text search-site__text">Cancel</span>
    </button>
  </form>
</div>
